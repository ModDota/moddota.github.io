{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "es2019"],
    "jsx": "react",
    "noEmit": true,
    "isolatedModules": true,
    "downlevelIteration": true,
    "esModuleInterop": true,
    "skipLibCheck": true,

    "baseUrl": ".",
    "paths": {
      "~components/*": ["components/*"],
      "~utils/*": ["utils/*"]
    }
  },
  "include": ["**/*"]
}
